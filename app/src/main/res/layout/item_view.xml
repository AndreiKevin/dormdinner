<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="360dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/recycler_view_box">

    <ImageView
        android:id="@+id/pic"
        android:layout_width="109dp"
        android:layout_height="120dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/recipeName"
        android:layout_width="250dp"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/pic"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="recipeName"
        android:textStyle="bold"
        android:fontFamily="@font/t_ramillas"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/yesAmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recipeName"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/pic"
        android:fontFamily="@font/palmer_lake"
        android:text="x"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/noAmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yesAmt"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/pic"
        android:fontFamily="@font/palmer_lake"
        android:text="x"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/holder1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recipeName"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@+id/yesAmt"
        android:fontFamily="@font/palmer_lake"
        android:text="in pantry"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/holder1"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="-3dp"
        android:layout_toEndOf="@+id/yesAmt"
        android:fontFamily="@font/palmer_lake"
        android:text="missing"
        android:textSize="25sp" />

    <ImageButton
        android:id="@+id/addToFav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recipeName"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="168dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_toEndOf="@+id/noAmt"
        android:background="#00FFFFFF"
        app:srcCompat="@drawable/favs_off" />

</RelativeLayout>